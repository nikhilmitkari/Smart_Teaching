<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.TeacherProfile"
    android:background="#DAFAF7">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:drawableRight="@android:drawable/ic_menu_info_details"
                android:fontFamily="cursive"
                android:text="My Information"
                android:textColor="#7C0303"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_action_email"
                android:text="Email"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/mail012"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_action_name"
                android:text="Name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/name012"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_edit"
                android:paddingLeft="24dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_action_phoneedit"
                android:text="Mobile No"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/mbno012"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_edit"
                android:paddingLeft="24dp"
                android:textColor="#000000"
                android:textSize="20sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_action_dob"
                android:text="Date Of Birth"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/dob014"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_edit"
                android:inputType="date"
                android:paddingLeft="24dp"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_action_gender"
                android:text="Gender"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/genderT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_menu_edit"
                android:paddingLeft="24dp"
                android:textColor="#000000"
                android:textSize="20sp" />



            <Button
                android:id="@+id/btn_editT"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:text="Update"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/btn_profileupdate"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>