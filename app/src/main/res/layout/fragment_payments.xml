<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentsFragment"
    android:background="#D1D8D7">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:drawableRight="@android:drawable/ic_menu_info_details"
                android:fontFamily="cursive"
                android:text="Current Class"
                android:textColor="#7C0303"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" My Current Class"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_class"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/selected_class"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:drawableRight="@android:drawable/ic_menu_edit"
                android:fontFamily="casual"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:text="Class I"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/classb"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" My Current Pattern"
                android:paddingLeft="10dp"
                android:drawableLeft="@drawable/ic_pattern"
                android:layout_marginTop="15dp"/>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/pattern1">

                <TextView
                    android:id="@+id/selected_pattern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAHARASHTRA STATE BOARD"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="120dp"
                    android:fontFamily="casual"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_updated"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="UPDATE"
                android:textSize="20sp"
                android:background="@drawable/btn_profileupdate"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>